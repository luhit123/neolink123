rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read/delete temp audio files for STT
    match /temp-audio/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default rule for other paths - authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
