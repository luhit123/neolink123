# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google Gemini AI API Key (for fallback)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# MedGemma Configuration (Choose ONE provider)
# ==============================================

# Option 1: Runpod Serverless (RECOMMENDED)
# Get your API key from: https://runpod.io/console/user/settings
# Get endpoint ID from your deployed serverless endpoint
VITE_RUNPOD_API_KEY=your_runpod_api_key_here
VITE_RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# Option 2: Hugging Face Inference API (Alternative)
# Get your API key from: https://huggingface.co/settings/tokens
# VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# VITE_MEDGEMMA_ENDPOINT=https://api-inference.huggingface.co/models/google/medgemma-4b-it

# Enable/disable MedGemma (set to 'false' to disable)
VITE_ENABLE_MEDGEMMA=true

# ==============================================
# Deepgram Speech-to-Text Configuration
# ==============================================
# Medical Speech-to-Text using Deepgram Nova-2-Medical model
# Get your API key from: https://console.deepgram.com/
# Sign up at: https://deepgram.com/
# Model: Nova-2-Medical (optimized for healthcare terminology)
VITE_DEEPGRAM_API_KEY=your_deepgram_api_key_here

